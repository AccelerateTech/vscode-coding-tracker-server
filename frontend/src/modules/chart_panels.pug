mixin chartBlock(id)
	div(id=id style="height: 250px")

mixin totallyIndicator(id)
	p.pull-right(id=id)
		| Totally: watching for 
		b(name="watching") ----
		| &nbsp;hs. coding for 
		b(name="coding") ----
		| &nbsp;hs

mixin fullReport(onclick)
	a.pull-right(href="#" style="text-decoration: none" onclick=onclick)
		span.glyphicon.glyphicon-plus
		span &nbsp;&nbsp;Full report

//====mixin==========
//===========HTML====

.row
	.col-md-12
		.panel.panel-success
			.panel-heading
				b Coding activities summary
				+totallyIndicator("counterSummary")
			.panel-body
				+chartBlock("chartSummary")
				
.row
	.col-md-12
		.panel.panel-info
			.panel-heading
				b Last 24 hours summary 
				+totallyIndicator("counterLast24Hs")
			.panel-body
				+chartBlock("chartLast24Hs")

.row
	.col-md-8
		.panel.panel-default
			.panel-heading
				b Group by projects 
				+fullReport("app.showAllProjects()")
			.panel-body
				+chartBlock("chartProject")
	.col-md-4
		.panel.panel-default
			.panel-heading 
				b Languages 
				+fullReport("app.showAllLangs()")
			.panel-body
				+chartBlock("chartLanguage")

.row
	.col-md-8
		.panel.panel-default
			.panel-heading: b Group by files 
			.panel-body
				+chartBlock("chartFile")
	.col-md-4
		.panel.panel-default
			.panel-heading: b Computers 
			.panel-body
				+chartBlock("chartComputer")
